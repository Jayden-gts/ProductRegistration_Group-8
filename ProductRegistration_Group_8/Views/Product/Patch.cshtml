@model ProductRegistration_Group_8.Models.Product

<h2>Patch Product Price</h2>

<form asp-action="Patch" method="post">
    <input type="hidden" asp-for="ProductId"/>
    <div class="form-group">
        <label>New Price</label>
        <input name="price" type="number" step="0.01" class="form-control" value="@Model.Price"/>
    </div>
    <button type="submit" class="btn btn-warning">Update Price</button>
</form>

